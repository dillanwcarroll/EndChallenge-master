@model IEnumerable<WebApplication.Models.Treatment>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            PetName
        </th>
        <th>
            Date
        </th>
        <th>
            Notes
        </th>
        <th>
            Price
        </th>
        <th>
            Surname
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PetName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Procedure.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TreatmentID }) |
                @Html.ActionLink("Details", "Details", new { id = item.TreatmentID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TreatmentID })
            </td>
        </tr>
    }

</table>